{
  "name": "Twitter Chrome Link Extension",
  "permissions": [
          "storage"
  ],
  "version": "1.0",
  "description": "Twitter Chrome Link Extension",
  "permissions": [
    "activeTab"
  ],
  "commands": { "showcontentdialog": { "suggested_key": { "default": "Ctrl+Shift+Y" }, "description": "show content dialog" } },
  "content_scripts": [{
    "matches": [
      "https://*.twitter.com/**",
      "https://*.reddit.com/**"
    ],

    "css": ["bootstrap.min.css","content.css","twitter.css"],
    "js": ["jquery.min.js","bootstrap.min.js","content.js","twitter.js"],
    "run_at": "document_end"
  }],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
    },
    "browser_action": {
   "default_title": "Chrome Extension",
   "default_popup": "options.html"
 },
  "manifest_version": 2
}
