{
  "name": "Twitter Chrome Link Extension",
  "permissions": [
          "storage"
  ],
  "version": "1.0",
  "description": "Twitter Chrome Link Extension",
  "content_scripts": [{
    "matches": [
      "https://*.twitter.com/**",
      "https://*.reddit.com/**"
    ],
    "css": ["bootstrap.min.css","content.css"],
    "js": ["jquery.min.js","bootstrap.min.js","content.js"],
    "run_at": "document_end"
  }],
  "icons": { "48": "icon48.png",
          "128": "icon128.png" },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
    },
    "browser_action": {
   "default_title": "Chrome Extension",
   "default_popup": "options.html"
 },
  "manifest_version": 2
}
